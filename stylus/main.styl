body
  background: url('../img/bg-city.png') center top no-repeat #333
  padding: 0
  margin: 0
  font-family: 'Arial', helvetica, sans-serif

#element
  display: inline-block
  position: relative
  margin: 550px 0 400px 400px
  border: 2px solid red
  color: black
  padding: 10px
  &:hover
    border-color: blue

.fokus-on
  box-sizing: border-box
  &:after
    content: ' '
    width: 100%
    height: 100%
    position: absolute
    top: -5px
    left: -5px
    box-shadow: 0 0 20px 15px rgba(black, .1)
    padding: 5px

.fokus
  background: rgba(black, .5)
  position: absolute
  left: 0
  z-index: 9999