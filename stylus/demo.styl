body
  background: url('../img/bg-city.png') center top no-repeat #333
  padding: 0
  margin: 0
  font-family: 'Arial', helvetica, sans-serif

.container
  background: rgba(white, .3)
  margin: 0 auto
  width: 960px
  position: relative

.element
  display: inline-block
  position: absolute
  border: 2px solid red
  color: black
  padding: 10px
  width: 200px
  height: 30px
  cursor: pointer
  &:hover
    border-color: blue

.element-one
  top: 200px
  left: 200px

.element-two
  top: 500px
  left: 450px